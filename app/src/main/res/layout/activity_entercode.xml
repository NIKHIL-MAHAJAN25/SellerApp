<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/bg"
    android:backgroundTint="#F9F8F4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".comprofile.Entercode">
    <!-- Guidelines for consistent padding -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hguide1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vguide1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vguide2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hguide2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.92" />

    <TextView
        android:id="@+id/tv_enter_code_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Enter Code Sent by Our Team"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#495048"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/hguide1"
        app:layout_constraintStart_toEndOf="@id/vguide1"
        app:layout_constraintEnd_toStartOf="@id/vguide2" />


    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Please check your email/phone for the 6-digit verification code."
        android:textSize="16sp"
        android:textColor="#495048"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_enter_code_title"
        app:layout_constraintStart_toEndOf="@id/vguide1"
        app:layout_constraintEnd_toStartOf="@id/vguide2" />


    <LinearLayout
        android:id="@+id/otp_input_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_instruction"
        app:layout_constraintStart_toEndOf="@id/vguide1"
        app:layout_constraintEnd_toStartOf="@id/vguide2">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="4dp"
            app:boxStrokeWidth="0dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="#DCE2D8"
            app:hintEnabled="false"
            app:boxStrokeColor="#698B6A">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_otp_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#495048"
                android:textSize="20sp"

                android:nextFocusForward="@+id/et_otp_2" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- OTP Box 2 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="4dp"
            app:boxStrokeWidth="0dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="#DCE2D8"
            app:hintEnabled="false"
            app:boxStrokeColor="#698B6A">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_otp_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#495048"
                android:textSize="20sp"

                android:nextFocusForward="@+id/et_otp_3" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="4dp"
            app:boxStrokeWidth="0dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="#DCE2D8"
            app:hintEnabled="false"
            app:boxStrokeColor="#698B6A">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_otp_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#495048"
                android:textSize="20sp"

                android:nextFocusForward="@+id/et_otp_4" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- OTP Box 4 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="4dp"
            app:boxStrokeWidth="0dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="#DCE2D8"
            app:hintEnabled="false"
            app:boxStrokeColor="#698B6A">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_otp_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#495048"
                android:textSize="20sp"

                android:nextFocusForward="@+id/et_otp_5" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- OTP Box 5 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="4dp"
            app:boxStrokeWidth="0dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="#DCE2D8"
            app:hintEnabled="false"
            app:boxStrokeColor="#698B6A">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_otp_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#495048"
                android:textSize="20sp"

                android:nextFocusForward="@+id/et_otp_6" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- OTP Box 6 -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="4dp"
            app:boxStrokeWidth="0dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="#DCE2D8"
            app:hintEnabled="false"
            app:boxStrokeColor="#698B6A">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_otp_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:textColor="#495048"
                android:textSize="20sp"
                 />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_verify_otp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:padding="15dp"
        app:cornerRadius="40dp"
        android:layout_marginTop="40dp"
        android:textColor="@android:color/white"
        app:backgroundTint="#698B6A"
        app:layout_constraintTop_toBottomOf="@+id/otp_input_layout"
        app:layout_constraintStart_toEndOf="@+id/vguide1"
        app:layout_constraintEnd_toStartOf="@+id/vguide2" />


    <LinearLayout
        android:id="@+id/resend_code_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_verify_otp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive the code?"
            android:textColor="#495048"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_resend_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Check Approval Status"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="5dp"
            android:paddingEnd="0dp"
            android:textSize="15sp"
            android:includeFontPadding="false"
            android:textColor="#698B6A"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>